<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 命名空间mapper,如果有多个mapper文件，这个必须唯一 -->
<mapper namespace="com.example">

    <!--初始化执行状态-->
    <update id="updateAllState" parameterType="string">
        update auto_test_case set state=null ,actual_result=null;
    </update>

    <!--查询所有case-->
    <select id="findAll" resultType="com.example.pojo.AutoTestCase">
        select * from auto_test_case;
    </select>

    <!--通过case_name查询记录-->
    <select id="findByCaseName" parameterType="string" resultType="com.example.pojo.AutoTestCase">
        select * from auto_test_case where case_name=#{caseName};
    </select>

    <!--通过id去查询case-->
    <select id="findById" parameterType="int" resultType="com.example.pojo.AutoTestCase">
        select * from auto_test_case where id=#{id};
    </select>

    <!--修改case的执行状态-->

    <update id="updateState" parameterType="com.example.pojo.AutoTestCase">
        update auto_test_case set state=#{state} ,actual_result=#{actualResult} where case_name=#{caseName};
    </update>
</mapper>